{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
		"baseUrl": ".",
    "paths": {
      "@root": ["."],
      "@root/*": ["./*"],
      "@lib": ["lib"],
      "@lib/*": ["lib/*"],
      "@helpers": ["lib/helpers"],
      "@helpers/*": ["lib/helpers/*"]
    }
  },
  "include": ["./package.json", "./lib", "./*.ts"]
}

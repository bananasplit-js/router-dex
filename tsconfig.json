{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@root": ["."],
      "@root/*": ["./*"],
      "@lib": ["lib"],
      "@lib/*": ["lib/*"],
      "@helpers": ["lib/helpers"],
      "@helpers/*": ["lib/helpers/*"],
      "@types": ["lib/types"]
    }
  },
  "include": [".", "package.json", ".npmignore"],
  "exclude": ["node_modules", "dist"]
}

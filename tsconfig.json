{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@root": ["."],
      "@root/*": ["./*"],
      "@src": ["src"],
      "@src/*": ["src/*"],
      "@helpers": ["src/helpers"],
      "@helpers/*": ["src/helpers/*"],
      "@types": ["src/types"]
    }
  },
  "include": [".", "package.json"],
  "exclude": ["node_modules", "dist"]
}
